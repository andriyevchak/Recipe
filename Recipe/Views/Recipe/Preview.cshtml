@model Recipe.Models.DbRecipe.Recipe

@{
    ViewBag.Title = "Preview";
}

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(m => m.RecipeId)
    <div class="row">
        <div style="width: 40%">
            <h3>@Model.Name</h3>
            <a href="#" class="image featured"><img src="@Html.DisplayFor(model => model.ImageUrl)" alt="" /></a>
            <h4>Description</h4>
            <p>@Html.DisplayTextFor(model => model.Description)</p>

            <h4>Time</h4>
            @Html.DisplayFor(model => model.Time)
        </div>

        <div style="width: 60%">
            <h3>Ingredients</h3>
            <div class="box">
                <table class="table table-condensed" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">Units</th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.Ingredients.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => m.Ingredients[i].Ingredient.Name)</td>
                                <td class="text-center">@Html.DisplayFor(m => m.Ingredients[i].Amount)</td>
                                <td class="text-center">@Html.DisplayFor(m => m.Ingredients[i].UnitOfMeasurement)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <div>
        @Html.ActionLink("Back to List", "AllRecipe", null, new { @class = "btn btn-default" })
    </div>
</div>