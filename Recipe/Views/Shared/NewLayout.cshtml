<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/main")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="homepage">
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <header id="header" class="container">

                <!-- Logo -->
                <div id="logo">
                    <h1><a href="/Home/Index">Recipe</a></h1>
                    <span>Finder</span>
                </div>

                <div class="nav">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Nav -->
                <nav id="nav">
                    <ul class="nav navbar-nav">
                        <li class="current">@Html.ActionLink("Home", "Index", "Home")</li>
                        @{
                            if (ViewBag.currentUserId != null)
                            {
                                <li class="current">@Html.ActionLink("Recipes rated by me", "MyRatedRecipes", "Home")</li>
                            }
                        }
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </nav>

            </header>
        </div>
        <div style="width:90%; margin:auto;">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/mainScripts")
        @RenderSection("scripts", required: false)
</body>
</html>

